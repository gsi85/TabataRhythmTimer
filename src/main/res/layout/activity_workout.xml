<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context=".WorkoutActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:background="#CCC"
        android:paddingBottom="1dp">

        <!-- Workout summary -->
        <RelativeLayout
            android:id="@+id/workoutSummaryFrame"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginRight="1dp"
            android:focusable="false"
            android:clickable="true"
            android:background="#000">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_popup_reminder"
                android:adjustViewBounds="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/workoutSummaryText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iconImage"
                android:layout_toRightOf="@+id/iconImage"
                android:text="Workout summary"
                android:textSize="16sp"
                android:textColor="#ff77beff"
                android:visibility="invisible" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/mainMenuSpinner"
                android:layout_alignTop="@+id/iconImage"
                android:layout_toRightOf="@+id/workoutSummaryText"
                android:layout_toEndOf="@+id/workoutSummaryText"
                android:spinnerMode="dropdown"
                android:popupBackground="#000000"
                android:background="@drawable/bg_spinner_menu_header"
                android:paddingRight="30dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/headerButtonLayout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:padding="0dp">

            <!-- Volume -->
            <FrameLayout
                android:id="@+id/volumeFrame"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="0dp"
                android:layout_margin="0dp">

                <ImageButton
                    android:id="@+id/volumeButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:background="@drawable/bg_header_buttons"
                    android:layout_margin="0dp"
                    android:padding="0dp" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Reset button -->
        <FrameLayout
            android:id="@+id/resetFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <ImageButton
                android:id="@+id/resetButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_previous"
                android:background="@drawable/bg_reset_button" />
        </FrameLayout>

        <!-- Play button -->
        <FrameLayout
            android:id="@+id/playFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:background="@drawable/bg_play_button" />
        </FrameLayout>


    </LinearLayout>

    <!-- Main content -->
    <RelativeLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footerLayout"
        android:layout_below="@id/headerLayout"
        android:gravity="center">

        <!-- Inner header -->
        <RelativeLayout
            android:id="@+id/innerHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:gravity="left">

            <TextView
                android:id="@+id/sectionCounter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/main_default_section_text"
                android:textSize="18sp"
                android:gravity="left|center_horizontal"
                android:textColor="#EEE"
                android:background="#000000" />

        </RelativeLayout>

        <!-- Inner footer -->
        <LinearLayout
            android:id="@+id/innerFooterLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#CCC"
            android:gravity="left"
            android:orientation="vertical">

            <!-- Workout progress label -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/workoutProgressLabelLayout">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/workoutProgressLabelFrame"
                    android:background="#000">

                    <TextView
                        android:id="@+id/workoutProgressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_workout_progress"
                        android:textSize="20sp"
                        android:textColor="#EEE"
                        android:layout_marginLeft="5dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/totalRemaininigTimeFrame"
                    android:background="#000">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalRemainingTimeCounter"
                        android:text="@string/main_default_total_remaining_text"
                        android:layout_gravity="right"
                        android:textSize="20sp"
                        android:textColor="#EEE"
                        android:layout_marginRight="5dp" />

                </FrameLayout>
            </LinearLayout>

            <!-- Workout progress bar -->
            <ProgressBar
                android:id="@+id/workoutProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="1000"
                android:progress="700"
                android:background="#000" />

        </LinearLayout>

        <!-- Timer layout -->
        <RelativeLayout
            android:id="@+id/timerLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/innerFooterLayout"
            android:layout_below="@id/innerHeaderLayout"
            android:gravity="center"
            android:background="#000">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/timerCounterLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_default_current_round_timer_text"
                    android:id="@+id/currentBlockCounter"
                    android:layout_gravity="center_horizontal"
                    android:textSize="43sp"
                    android:textColor="#EEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_default_workout_type"
                    android:id="@+id/workoutTypeText"
                    android:layout_gravity="center_horizontal"
                    android:textSize="48sp"
                    android:textColor="#EEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_default_round_counter_text"
                    android:id="@+id/roundCounter"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="#EEE" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
