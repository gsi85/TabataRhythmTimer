<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#222222"
                        android:startColor="#222222"
                        android:type="linear" />

                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/abc_spinner_mtrl_am_alpha" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#000000"
                        android:startColor="#000000"
                        android:type="linear" />

                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/abc_spinner_mtrl_am_alpha" />
            </item>
        </layer-list>
    </item>

</selector>